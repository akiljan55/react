{
  "name": "redax",
  "version": "0.0.0",
  "description": "A simple flux architecture that combines actions & reducers and maps your store's state directly to your components",
  "main": "lib/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-js": "mkdir -p examples/build/js && browserify -d -t babelify examples/src/js/index.js -o examples/build/js/index.js",
    "watch-js": "ulimit -n 512 && watchify -d -t babelify examples/src/js/index.js -o examples/build/js/index.js -v",
    "watch": "npm run watch-js",
    "build": "npm run build-js",
    "start": "http-server examples -c-1 -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JakeSidSmith/redax.git"
  },
  "keywords": [
    "react",
    "flux",
    "reducer",
    "action",
    "data",
    "flow",
    "store"
  ],
  "author": "Jake 'Sid' Smith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JakeSidSmith/redax/issues"
  },
  "homepage": "https://github.com/JakeSidSmith/redax#readme",
  "dependencies": {
    "immutable": "=3.7.6",
    "react": ">=0.14.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "=6.6.0",
    "babel-preset-react": "=6.5.0",
    "babelify": "=7.2.0",
    "browserify": "=13.0.0",
    "http-server": "=0.9.0",
    "react-dom": "=0.14.8",
    "watchify": "=3.7.0"
  }
}
